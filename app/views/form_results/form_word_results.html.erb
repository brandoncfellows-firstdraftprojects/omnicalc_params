<h1>Word Count Results</h1>

 <dl>
      <dt>
        Text
      </dt>
      <dd>
        <%= simple_format(@text) %>
      </dd>

      <dt>
        Word Count
      </dt>
      <dd>
        <%= @word_count %>
      </dd>

      <dt>
        Character Count (with spaces)
      </dt>
      <dd>
        <%= @character_count_with_spaces %>
      </dd>

      <dt>
        Character Count (without spaces)
      </dt>
      <dd>
        <%= @character_count_without_spaces %>
      </dd>

      <dt>
        Occurrences of <code><%= @special_word %></code>
      </dt>
      <dd>
        <%= @occurrences %>
      </dd>
    </dl>
<br>
<a href="/word_count/new">Process more text</a>